@using CodingEvents.ViewModels 
@model AddEventViewModel 

<h1>Edit Event</h1>

<form method="post" action="/events/edit">
    <input type="hidden" value="@ViewBag.editingEvent.Id" name="eventId" />
    <div class="form-group">
        <label>Event Name: <input name="name" type="text" value="@ViewBag.editingEvent.Name" /></label>
    </div>
    <div class="form-group">
        <label>Description: <input name="description" type="text" value="@ViewBag.editingEvent.Description" /></label>
    </div>
    <div class="form-group">
        <label>Contact Email: <input name="contactEmail" type="email" value="@ViewBag.editingEvent.ContactEmail" /></label>
    </div>
    <div class="form-group">
        <label>Location: <input name="location" type="text" value="@ViewBag.editingEvent.Location" /></label>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfAttendees"># Attendees</label>
        <input asp-for="NumberOfAttendees" value="@ViewBag.editingEvent.NumberOfAttendees"/>
        <span asp-validation-for="NumberOfAttendees"></span>
    </div>
    <input type="submit" value="Save Changes" />
</form>