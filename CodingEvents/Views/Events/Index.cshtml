<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event(s)</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet.</p>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Event</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody> 
        @foreach (Event evt in ViewBag.events)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Description</td>
            </tr>
        }
    </tbody>
</table>

