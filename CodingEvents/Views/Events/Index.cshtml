<link rel="stylesheet" type="text/css" href="~/css/site.css" />

@using CodingEvents.Models

@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event(s)</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet.</p>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Event</th>
            <th scope="col">Description</th>
            <th scope="col">Event Type</th>
            <th scope="col">Location</th>
            <th scope="col"># Attendees</th>
            <th scope="col">Contact Email</th>
        </tr>
    </thead>
    <tbody> 
        @foreach (Event evt in Model)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Description</td>
                <td>@evt.Type</td>
                <td>@evt.Location</td>
                <td>@evt.NumberOfAttendees</td>
                <td>@evt.ContactEmail</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">Edit Event</a></td>
            </tr>
        }
    </tbody>
</table>

