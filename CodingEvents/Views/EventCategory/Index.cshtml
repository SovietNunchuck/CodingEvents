@using CodingEvents.Models

@model List<EventCategory>

<h1>Event Categories</h1>

@if (Model.Count == 0)
{
    <p>No categories to display.</p>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (EventCategory ctgy in Model)
        {
            <tr>
                <td>@ctgy.Id</td>
                <td>@ctgy.Name</td>
            </tr>
        }
    </tbody>
</table>